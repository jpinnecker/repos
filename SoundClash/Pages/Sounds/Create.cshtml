@page
@model SoundClash.Pages.Sounds.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Sound</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SoundCreate.Name" class="control-label"></label>
                <input asp-for="SoundCreate.Name" class="form-control" />
                <span asp-validation-for="SoundCreate.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoundCreate.Type" class="control-label"></label>
                <select asp-for="SoundCreate.Type" asp-items="@(Html.GetEnumSelectList<SoundType>())" class="form-control"></select>
                <span asp-validation-for="SoundCreate.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoundCreate.FormFile" class="control-label"></label>
                <input asp-for="SoundCreate.FormFile" type="file" class="form-control" />
                <span asp-validation-for="SoundCreate.FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-page-handler="Upload" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/SoundTypeValidationScript.js"></script>
    <script src="~/js/FileSizeValidationScript.js"></script>
    <script src="~/js/FileExtensionValidationScript.js"></script>
}
